<div class="column is-half"> 
    <h3 class="title is-3">
        Past Events:
    </h3>
    <% @past_events = @user.attended_events.past %>
    <% @past_events.each do |past_event| %>
        <div class="box">
            <div class="block">
            <h4 class="control title is-4">
                <%= past_event.title %>
            </h4>
            <p class="control">
                <%= past_event.date %>
            </p>
            </div>
            <p class="control">
                <%= past_event.description %>
            </p>
        </div>
    <% end %>
</div>