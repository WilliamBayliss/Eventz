<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-half">
                <div class="box">
                    <h2 class="title is-2">
                        <div class="block">
                        <%= @event.title %>
                        </div>
                        <strong><%= @event.date %></strong>

                    </h2>
                    <div class="block">
                        <p class="control">by <%= link_to @event.creator.username, user_path(@event.creator.id) %></p>
                    </div>
                    <div class="block">
                        <p class="control">
                            <%= @event.description %>
                        </p>
                    </div>
                </div>

                <p id="notice"><%= notice %></p>

                <%= link_to 'Edit', edit_event_path(@event) %> |
                <%= link_to 'Back', events_path %>
            </div>
            <% if @event.attendees.any? %>
                <div class="column is-3">
                    <div class="box">
                        <h4 class="title is-4">Attending:</h4>
                            <% @event.attendees.each do |user| %>
                                <div class="block">
                                    <p class="control">
                                        <%= link_to user.username, user_path(user.id) %>
                                    </p>
                                </div>
                            <% end %>
                    </div>
                </div>
            <% end %>
        
        </div>
    </div>
</section>
