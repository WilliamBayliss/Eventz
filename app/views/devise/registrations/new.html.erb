<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <div class="control">
            <%= f.label :first_name, class: "label" %><br />
            <%= f.text_field :first_name, class: "input", autofocus: true  %>
            </div>
          </div>

          <div class="field">
            <div class="control">

            <%= f.label :last_name, class: "label" %><br />
            <%= f.text_field :last_name, class: "input"  %>
            </div>

          </div>


          <div class="field">
            <div class="control">

            <%= f.label :username, class: "label" %><br />
            <%= f.text_field :username, class: "input" %>
            </div>

          </div>


          <div class="field">
            <div class="control">

            <%= f.label :email, class: "label" %><br />
            <%= f.email_field :email, class: "input", autocomplete: "email" %>
            </div>

          </div>

          <div class="field">
            <div class="control">

            <%= f.label :password, class: "label" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, class: "input", autocomplete: "new-password" %>
            </div>

          </div>

          <div class="field">
            <div class="control">

            <%= f.label :password_confirmation, class: "label" %><br />
            <%= f.password_field :password_confirmation, class: "input", autocomplete: "new-password" %>
            </div>

          </div>

          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
        <% end %>
        <br />
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
